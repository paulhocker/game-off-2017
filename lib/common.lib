#importonce

#import "./bits.lib"

//  ZERO PAGE

//  parameters - used by many routines
.label parm1 = $02
.label parm2 = parm1 + 2
.label parm3 = parm2 + 2
.label parm4 = parm3 + 2
.label parm5 = parm4 + 2

//  temporary - used by many different routines
.label temp1 = parm5 + 2
.label temp2 = temp1 + 2
.label temp3 = temp2 + 2
.label temp4 = temp3 + 2
.label temp5 = temp4 + 2

//  return - data stored by a routine
.label rtrn1 = temp5 + 2
.label rtrn2 = rtrn1 + 2
.label rtrn3 = rtrn1 + 2
.label rtrn4 = rtrn1 + 2
.label rtrn5 = rtrn1 + 2

.label zero_page_start = rtrn5 + 2

//  MACROS

.macro reset_memory () {
    lda #$37
    sta $01
}

.macro clear_screen(address, code) {

    lda #code
    ldx #0 

    !:

    sta address, x
    sta address + $100, x
    sta address + $200, x
    sta address + $300, x
    inx
    bne !-
}

.macro clear_color(code) {
    
    lda #code
    ldx #0 

    !:

    sta $d800, x
    sta $d800 + $100, x
    sta $d800 + $200, x
    sta $d800 + $300, x
    inx
    bne !-    
}

